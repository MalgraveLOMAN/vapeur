            <div class="form-group">
                <label for="game-editor"><b>Choisir un Ã©diteur</b></label>
                <select name="game-editor" id="game-editor">
                    {{#each editors}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="game-type"><b>Choisir un type de jeu</b></label>
                <select name="game-type" id="game-type">
                    {{#each types}}
                    <option value="{{id}}">{{type}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn">Ajouter un jeu</button>
                <button type="button" class="btn cancel" onclick="closeForm('game-form')">
                    Fermer
                </button>
            </div>
        </form>

    </div>
