<section class="menu">
    <button class="open-button" onclick="openForm('game-form')">Ajouter un jeu</button>
    <div class="form-popup" id="game-form">
        <form action="/gameCreate" class="form-container" method="POST">
            <h1>Ajouter un Jeu</h1>
            <div class="form-group">
                <label for="game-title"><b>Titre du jeu</b></label>
                <input type="text" id="game-title" name="game-title" placeholder="Entrez le titre du jeu" required />
            </div>
            <div class="form-group">
                <label for="game-description"><b>Description du jeu</b></label>
                <input type="text" id="game-description" name="game-description"
                    placeholder="Entrez la description du jeu" required />
            </div>
            <div class="form-group">
                <label for="game-release-date"><b>Date de sortie du jeu</b></label>
                <input type="date" id="game-release-date" name="game-release-date" />
            </div>
            <div class="form-actions">
                <button type="submit" class="btn">Ajouter un jeu</button>
                <button type="button" class="btn cancel" onclick="closeForm('game-form')">
                    Fermer
                </button>
            </div>
        </form>

    </div>
</section>