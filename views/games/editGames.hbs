<h1>Modifier le Jeu : {{game.title}}</h1>

<section class="menu">
    <button class="open-button" onclick="openForm('game-form')">Modifier le Jeu</button>

    <div class="form-popup" id="game-form">
        <form action="/game/update/{{game.id}}" class="form-container" method="POST">
            <h1>Modifier les Détails du Jeu</h1>

            <div class="form-group">
                <label for="game-title"><b>Titre du jeu</b></label>
                <input type="text" id="game-title" name="game-title" placeholder="Entrez le titre du jeu"
                    value="{{game.title}}" required />
            </div>

            <div class="form-group">
                <label for="game-description"><b>Description du jeu</b></label>
                <input type="text" id="game-description" name="game-description"
                    placeholder="Entrez la description du jeu" value="{{game.description}}" required />
            </div>

            <div class="form-group">
                <label for="game-release-date"><b>Date de sortie</b></label>
                <input type="date" id="game-release-date" name="game-release-date" value="{{game.releaseDate}}"
                    required />
            </div>

            <div class="form-group">
                <label for="game-type"><b>Choisir un genre</b></label>
                <select name="game-type" id="game-type" required>
                    {{#each types}}
                    <option value="{{id}}" {{#if (equal this.id ../game.type.id)}}selected{{/if}}>{{type}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="game-editor"><b>Choisir un éditeur</b></label>
                <select name="game-editor" id="game-editor" required>
                    {{#each editors}}
                    <option value="{{id}}" {{#if (equal this.id ../game.editor.id)}}selected{{/if}}>{{name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn">Mettre à jour le jeu</button>
                <button type="button" class="btn cancel" onclick="closeForm('game-form')">Fermer</button>
            </div>
        </form>
    </div>
</section>

<div class="buttons">
    {{> ButtonDelete}}
    {{> ButtonRemoveFrontPage}}
    {{> ButtonFrontPage}}
</div>